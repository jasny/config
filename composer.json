{
    "name": "jasny/config",
    "description": "Configure your application. You can load .ini, .json, .yaml or .neon files or a MySQL DB.",
    "keywords": ["config", "configuration", "ini", "json", "yaml", "db", "mysql"],
    "license": "MIT",
    "authors": [
        {
            "name": "Arnold Daniels",
            "email": "arnold@jasny.net",
            "homepage": "http://www.jasny.net"
        }
    ],
    "support": {
        "issues": "https://github.com/jasny/Config/issues",
        "source": "https://github.com/jasny/Config"
    },
    "require": {
        "php": ">=5.4.0"
    },
    "require-dev": {
        "mustangostang/spyc": "0.*",
      	"symfony/yaml": "2.*",
        "nette/neon": "^2.3",
        "satooshi/php-coveralls": "dev-master"
    },
    "suggest": {
        "symfony/yaml": "To support YAML without the yaml or syck php extension",
        "nette/neon": "Required to use the NEON notation"        
    },
    "autoload": {
        "psr-0": {
            "Jasny\\Config": "src/"
        }
    },
    "config": {
        "use-include-path": true
    }
}
